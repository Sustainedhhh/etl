<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="ETL">
		<xs:annotation>
			<xs:documentation>ETL Root Element</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="Declartion"/>
				<xs:element ref="Process" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="Process">
		<xs:complexType>
			<xs:all>
				<xs:element ref="Database" minOccurs="0"/>
				<xs:element ref="SOAPWebservice" minOccurs="0"/>
				<xs:element ref="RESTfulWebservice" minOccurs="0"/>
				<xs:element ref="CSV" minOccurs="0"/>
				<xs:element ref="File" minOccurs="0"/>
			</xs:all>
			<xs:attribute name="id" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="Database">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="sql" type="xs:string"/>
				<xs:element ref="Process" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="id" use="required"/>
			<xs:attribute name="connection-id" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="SOAPWebservice">
		<xs:complexType mixed="true">
			<xs:sequence>
				<xs:element name="URL" type="xs:string"/>
				<xs:element name="Action" type="xs:string"/>
				<xs:element name="Input"/>
				<xs:element ref="Process" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="id" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="RESTfulWebservice">
		<xs:complexType mixed="true">
			<xs:sequence>
				<xs:element name="URL">
					<xs:complexType mixed="true">
						<xs:attribute name="Accept" default="application/*">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="application/*"/>
									<xs:enumeration value="application/xml"/>
									<xs:enumeration value="application/json"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:attribute>
						<xs:attribute name="Content-Type" default="application/xml">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="application/*"/>
									<xs:enumeration value="application/xml"/>
									<xs:enumeration value="application/json"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:attribute>
					</xs:complexType>
				</xs:element>
				<xs:element name="Method"/>
				<xs:element name="Input" minOccurs="0"/>
				<xs:element ref="Process" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="id" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="CSV">
		<xs:complexType>
			<xs:sequence minOccurs="0">
				<xs:element name="URL"/>
				<xs:element ref="Process" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="id"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="FlatFile"/>
	<xs:element name="Declartion">
		<xs:complexType>
			<xs:all>
				<xs:element name="Properties" minOccurs="0">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Property-File" maxOccurs="unbounded">
								<xs:complexType>
									<xs:attribute name="id" use="required"/>
									<xs:attribute name="path" use="required"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="Connections" minOccurs="0">
					<xs:complexType>
						<xs:sequence>
							<xs:element ref="Connection" maxOccurs="unbounded"/>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:all>
		</xs:complexType>
	</xs:element>
	<xs:element name="PropertyFile"/>
	<xs:element name="File">
		<xs:complexType>
			<xs:sequence minOccurs="0">
				<xs:element name="URL"/>
				<xs:element ref="Process" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="id"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="Connection">
		<xs:complexType>
			<xs:attribute name="id" use="required"/>
			<xs:attribute name="username" use="required"/>
			<xs:attribute name="password" use="required"/>
			<xs:attribute name="url" use="required"/>
			<xs:attribute name="driver" use="required"/>
		</xs:complexType>
	</xs:element>
</xs:schema>
